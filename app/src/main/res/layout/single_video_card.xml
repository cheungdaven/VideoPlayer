<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_video_card"
    android:layout_gravity="center"
    android:layout_height="@dimen/single_video_card_height"
    android:layout_width="@dimen/single_video_card_width"
    card_view:cardCornerRadius="@dimen/single_video_card_radius"
    android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/video_icon"
            android:layout_width="@dimen/single_video_icon_width"
            android:layout_marginTop="5dp"
            android:layout_height="@dimen/single_video_icon_height"/>

        <TextView
            android:id="@+id/video_title"
            android:layout_marginLeft="155dp"
            android:maxLines="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="155dp"
            android:paddingBottom="5dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/video_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </LinearLayout>

</android.support.v7.widget.CardView>
